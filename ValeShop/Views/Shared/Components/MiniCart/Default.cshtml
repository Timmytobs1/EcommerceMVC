@model ValeShop.Models.CartItemViewModel

<div class="hm-minicart">
    <div class="hm-minicart-trigger">
        <span class="item-icon"></span>
        <span class="item-text">
            @Model.CartItems.Sum(item => item.Total).ToString("C") <!-- Example for total amount -->
            <span class="cart-item-count">@Model.CartItems.Count</span> <!-- Example for item count -->
        </span>
    </div>
    <div class="minicart">
        <ul class="minicart-product-list">
            @foreach (var item in Model.CartItems)
            {
                <li>
                    <a href="single-product.html" class="minicart-product-image">
                        <img src="@item.ImageUrl" alt="cart products">
                    </a>
                    <div class="minicart-product-details">
                        <h6><a href="single-product.html">@item.Name</a></h6>
                        <span>@item.Price.ToString("C") x @item.Quantity</span>
                    </div>
                    <button class="close" title="Remove">
                        <i class="fa fa-close"></i>
                    </button>
                </li>
            }
        </ul>
        <p class="minicart-total">TOTAL: <span>@Model.CartItems.Sum(item => item.Total).ToString("C")</span></p>
        <div class="minicart-button">
            <a asp-controller="Cart" asp-action="Cart" class="li-button li-button-fullwidth li-button-dark">
                <span>View Full Cart</span>
            </a>
            <a asp-controller="Checkout" asp-action="Checkout" class="li-button li-button-fullwidth">
                <span>Checkout</span>
            </a>
        </div>
    </div>
</div>