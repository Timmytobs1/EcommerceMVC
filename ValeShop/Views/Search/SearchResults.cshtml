@model IList<ValeShop.Models.Entities.Product>


<h2>Search Results</h2>

@if (!Model.Any())
{
    <p>No products found.</p>
}
else
{
    <ul style="list-style-type:none; padding:0;">
        @foreach (var product in Model)
        {
            <li style="margin-bottom: 20px;">
                <a href="@Url.Action("SingleProduct", "Product", new { Id = product.Id })" style="text-decoration:none; color:inherit;">
                    <img src="@product.ImagePath" alt="@product.Name" style="width:150px;height:auto; display:block; margin-bottom:10px;" />
                    <p style="font-size:1.2em; font-weight:bold;">@product.Name</p>
                    <p style="color:gray;">Price: @product.Price</p>
                </a>
            </li>
        }
    </ul>
}
