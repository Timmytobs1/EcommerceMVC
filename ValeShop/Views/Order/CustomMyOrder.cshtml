
@model IEnumerable<ValeShop.Models.Entities.Orders>

@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

@if (!Model.Any())
{
    <p>You have no orders yet.</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Items</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>@order.Status</td>
                        <td>
                            <ul>
                                
                                    <li>@order.ProductId</li>
                                    <li>@order.UserId</li>
                                
                            </ul>
                        </td>
                        <td>@order.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
